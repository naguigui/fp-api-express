{
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es2018",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
		"paths": {
            "@/*": ["src/*"],
            "*": [
                "node_modules/*"
            ]
        },
        "typeRoots": [
			"./src/@types",
			"node_modules/@types"
		],
    },
    "include": [
        "src/**/*"
    ]
}